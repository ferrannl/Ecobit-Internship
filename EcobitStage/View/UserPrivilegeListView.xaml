<Page
    x:Class="EcobitStage.View.UserPrivilegeListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EcobitStage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="UserPrivilege"
    Width="800"
    Height="450"
    DataContext="{Binding UserPrivilegeList, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>
            <TextBlock>Gebruikers:</TextBlock>
            <Button HorizontalAlignment="Right">Log uit</Button>
        </Grid>
        <DataGrid IsReadOnly="True" ItemsSource="{Binding UserPrivileges}" />
    </StackPanel>
</Page>
